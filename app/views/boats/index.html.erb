<p id="notice"><%= notice %></p>

<h1>Boats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Capacity</th>
      <th>Speed</th>
      <th>Photo</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @boats.each do |boat| %>
      <tr>
        <td><%= boat[:name] %></td>
        <td><%= boat[:location] %></td>
        <td><%= boat[:capacity] %></td>
        <td><%= boat[:speed] %></td>
        <td><%= boat[:photo_id] %></td>
        <td><%= link_to 'Show', boat_path(boat) %></td>
        <td><%= link_to 'Edit', edit_boat_path(boat) %></td>
        <td><%= link_to 'Destroy', boat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

